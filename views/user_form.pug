extends layout

block content
    h1= title
    form(method='POST')
        div.form-group
            label(for='username') Username:
            input#username.form-control(type='text' name='username' value=(user ? user.username : '') required minlength="3")
        div.form-group
            label(for='password') Password:
            input#password.form-control(type='password' name='password' value=(user ? user.password : '') required minlength="5")
        div.form-group
            label(for="email") Email:
            input#email.form-control(type='email' name='email' value=(user ? user.email : '') required)
        button.btn.btn-primary.mr-3(type='submit') Submit
        a.btn.btn-secondary(href='/') Cancel
    if errors
        ul
            for error in errors
                li!= error.msg